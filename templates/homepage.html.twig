{% extends 'base.html.twig' %}

{% block main %}
    <h1>Homepage 😝</h1>
    <p>{{ msg | default('Thibaud is awesome 😍') }}</p>

    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-xs-12 col-md-6 col-lg-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <a href="{{ path('product.show', {'id': product.id}) }}" class="btn btn-primary">Show Product</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
